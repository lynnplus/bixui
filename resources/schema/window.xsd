<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="bixlib"
           xmlns="bixlib"

           elementFormDefault="qualified">

    <xs:include schemaLocation="data_type.xsd"/>
    <xs:include schemaLocation="controls.xsd"/>


    <xs:element name="Window">
        <xs:annotation>
            <xs:documentation>window</xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:group ref="layoutGroup"/>
            <xs:attribute name="title" type="xs:string" default="">
                <xs:annotation>
                    <xs:documentation>title text for window</xs:documentation>
                </xs:annotation>
            </xs:attribute>
            <xs:attribute name="width" type="ControlLength" default="auto"/>
            <xs:attribute name="height" type="ControlLength"/>
            <xs:attribute name="min-width" type="xs:nonNegativeInteger"/>
            <xs:attribute name="min-height" type="xs:nonNegativeInteger"/>
            <xs:attribute name="max-width" type="xs:nonNegativeInteger"/>
            <xs:attribute name="max-height" type="xs:nonNegativeInteger"/>
        </xs:complexType>
    </xs:element>


</xs:schema>